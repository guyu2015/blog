/**index.wxss**/

.wrapper{
  display: flex;
  flex-direction: row;
  align-items: left;
}
.userinfo{
   flex : 1;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  /* vertical-align: middle; */
  width: 128rpx;
  height: 128rpx;
    margin: 40rpx 100rpx 20rpx ;  
  border-radius: 50%;
}

.userinfo-nickname {
  /* margin-left: 20px; */
  color: white;
  font-weight: bold;
  margin: -20rpx 130rpx ;  
}

.usermotto {
  margin-top: 200px;
}
.right-wrapper{
    flex:1;
  flex-direction: column;
  align-items: center;
}
.right-up{
  margin-top:35px;
}
.right-up, .right-down{
  line-height : 40px;
  display:block;
  font-size: 20px;
  color:white;
  align-items: center;
}
.post-wrapper{
   font-size: 15px;
width : 100%;
height : 150px;
  /* background-color:powderblue; */
}
.post{
 
  display : flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
 
}
.post-one{
  flex : 1;
  flex-direction: column;
  /* align-items: center; */
  /* background-color: red; */
  
  margin: 40rpx 50rpx 20rpx ; 
   
}
.post-image{
   margin: 10rpx 25rpx ; 
  align-items: center;
}
.post-text{
  margin: 10rpx  ; 
}
.banner-wrapper{
  width : 100%;
  height : 340px;
  /* background-color: pink; */
  font-size: 15px;

}
.left-title{
  line-height: 25px;
  margin-left:0;
}

.right-title{
  line-height: 25px;
  float : right; 
}
.first-banner,.second-banner{
  width : 100%;
  height : 150px;

}
.first-banner image{
  width : 100%;
  height : 100%;
}
.second-banner image{
  margin-top: 15px;
  width : 100%;
  height : 100%;
}



.last-text{
  
   font-size: 15px;
   margin-top:20px;
   text-align: left;
}
.last-wrapper{
  
  width : 100%;
  font-size: 15px;
}
.last{
  display:flex;
  flex-direction: row;
  height : 80px;
  width : 100%;
  /* background-color: pink; */
  padding:10px 15px ;
  border-top:1px solid #eee;
}
.pic-wrapper{
  flex : 1;
  display: inline-block;
  width:80px;
  height : 80px;

}
 .pic-wrapper image{
  width : 100%;
  height: 100%;
}
.text-wrapper{
  
  height : 80px;
  position:relative;
  flex: 3;
  padding:0 8px;
}
.last-right{
  margin-top:0;
  /* line-height: 20px; */
  display:block;
}
.left-small{
  margin-top: 50px;
  position:absolute;
  left : 15px;
  bottom : 10px;
  color:darkorange;
  font-size: 13px;
}
.right-small{
  position:absolute;
   right : 35px; 
  bottom : 10px;
  color:darkgray;
  font-size: 13px;
} 


 